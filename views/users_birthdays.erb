<%
  @title = "Anniversaires"
  @breadcrumb = [['/', 'Accueil'], ['/users', 'Annuaire des adhÃ©rents'], ['/users/birthdays', @title]]
%>

<h2>Anniversaires</h2>

<% @months_and_birthdays.each do |month, birthdays| %>

<h3><%= month.strftime("%B %Y") %></h3>

<table class="fullwidth nicetable">
  <thead>
    <tr>
      <th>Date</th>
      <th>Pseudo</th>
    </tr>
  </thead>
  <tbody>
    <% birthdays.each_with_index do |u,i| %>
      <tr class="<%= i%2==0 ? "even" : "odd" %>">
        <th><%= birth_day(u.birth_date) %></th>
        <td><a href="/user/<%= u.uid %>"><%= u.display_name %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

