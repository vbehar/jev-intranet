<% 
  @title = "Annuaire des adhérents"
  @breadcrumb = [['/', 'Accueil'], ['/users', @title]]
%>

<div id="contentfull">

<h2>Annuaire des adhérents</h2>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('#users').dataTable( {
      "bJQueryUI": true,
      "bAutoWidth": false,
      "sPaginationType": "full_numbers",
      "iDisplayLength": 50,
      "oLanguage": {
        "oPaginate": {
          "sFirst": "Début",
          "sLast": "Fin",
          "sPrevious": "Précédent",
          "sNext": "Suivant"
        },
        "sInfo": "Adhérents _START_ à _END_ (sur _TOTAL_)",
        "sInfoEmpty": "Aucun adhérent à afficher",
        "sInfoFiltered": " - Nombre total d'adhérents : _MAX_",
        "sLengthMenu": 'Afficher <select>' +
                       '<option value="20">20</option>' +
                       '<option value="50">50</option>' +
                       '<option value="100">100</option>' +
                       '<option value="-1">Tous</option>' +
                       '</select> adhérents',
        "sProcessing": "Veuillez patienter...",
        "sSearch": "Rechercher :",
        "sZeroRecords": "Aucun adhérent à afficher"
      }
    } );
  } );
</script>

<table id="users" class="fullwidth">
  <thead>
    <tr>
      <th>Pseudo</th>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Fonction</th>
      <th>Catégorie</th>
      <th>Sexe</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><a href="/user/<%= u.uid %>"><%= u.display_name %></a></td>
        <td><%= u.firstname %></td>
        <td><%= u.lastname %></td>
        <td><%= u.title %></td>
        <td><%= u.ffck_category %></td>
        <td><img src="/images/icons/gender_<%= u.gender %>.png" alt="<%= u.male? ? 'Homme' : 'Femme' %>" /></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr class="clear" />
</div>

